body
	background #fff

.wrapper .header
	z-index 1
	background barra-superior
	position fixed
	width calc(100% - 0%)
	height 70px
	display flex
	top 0

.wrapper .header .header-menu
	width calc(100% - 0%)
	height 100%
	display flex
	justify-content space-between
	align-items center
	padding 0 20px

.wrapper .header .header-menu .title
	color #fff
	font-size 25px
	text-transform uppercase
	font-weight 900

.wrapper .header .header-menu .title span
	color #309BC7

.wrapper .header .header-menu .sidebar-btn
	color #fff
	position absolute
	margin-left 240px
	font-size 22px
	font-weight 900
	cursor pointer
	transition 0.3s
	transition-property color

.wrapper .header .header-menu .sidebar-btn:hover
	color #4CCEE8

.wrapper .header .header-menu ul
	display flex

.wrapper .header .header-menu ul li a
	background #fff
	color barra-lateral
	display block
	margin 0 10px
	margin-top 20px
	font-size 18px
	width 34px
	height 34px
	line-height 35px
	text-align center
	border-radius 50%
	transition 0.3s
	transition-property background, color

.wrapper .header .header-menu ul li a:hover
	background #4CCEE8
	color #fff

.wrapper .sidebar
	z-index 1
	background barra-lateral
	position fixed
	top 70px
	width 250px
	height calc(100% - 9%);
	transition 0.3s
	transition-property width
	overflow-y auto

.wrapper .sidebar .sidebar-menu
	overflow hidden
	margin-bottom 20px

.wrapper .sidebar .sidebar-menu .profile
	margin-bottom 0px
	padding-bottom 10px
	border-bottom 2px solid #fff
	

.wrapper .sidebar .sidebar-menu .profile img
	margin 10px 0
	width 100px
	height 100px
	border-radius 50%

.wrapper .sidebar .sidebar-menu .profile p
	color #fff
	font-weight 700
	margin-bottom 0px

.wrapper .sidebar .sidebar-menu .item
	width 250px
	overflow hidden

.wrapper .sidebar .sidebar-menu .item .menu-btn
	display block
	color #fff
	position relative
	padding 10px 20px
	transition 0.3s
	transition-property color

.wrapper .sidebar .sidebar-menu .item .menu-btn:hover
	color #4ccee8
	text-decoration none
	
.wrapper .sidebar .sidebar-menu .item .menu-btn.active
	background #5581f0
	text-decoration none

.wrapper .sidebar .sidebar-menu .item .menu-btn i
	margin-right 20px
	font-size 15px

.wrapper .sidebar .sidebar-menu .item .menu-btn span
	font-size 15px

.wrapper .sidebar .sidebar-menu .item .menu-btn .drop-down
	float right
	font-size 12px
	margin-top 3px

.wrapper .sidebar .sidebar-menu .item .sub-menu
	background #3498DB
	overflow hidden
	max-height 0
	transition 0.3s
	transition-property background
	padding-left 15px

.wrapper .sidebar .sidebar-menu .item .sub-menu a
	display block
	position relative
	color #fff
	white-space nowrap
	font-size 15px
	padding 10px 20px
	transition 0.3s
	transition-property background	
	border-bottom 1px solid #8FC5E9

.wrapper .sidebar .sidebar-menu .item .sub-menu a:hover
	background #5581f0
	text-decoration none

.wrapper .sidebar .sidebar-menu .item .sub-menu .active
	background #5581f0
	text-decoration none

.wrapper .sidebar .sidebar-menu .item .sub-menu a i
	padding-right 20px
	font-size 10px

.wrapper .sidebar .sidebar-menu .item:target .sub-menu
	max-height 500px

.wrapper .main-container
	width (100% - 250px)
	margin-top 70px
	margin-left 250px
	padding 15px
	background #fff
	background-size cover
	height 100vh
	transition 0.3s

.wrapper.collapse .sidebar{
  width 70px
}

.wrapper.collapse .sidebar .profile,
.wrapper.collapse .sidebar .sidebar-menu .item .menu-btn span,
.wrapper.collapse .sidebar .sidebar-menu .item .sub-menu span
{
	display none
}

.wrapper.collapse .sidebar .sidebar-menu .item .menu-btn i{
	font-size 20px
}

.wrapper.collapse .sidebar .sidebar-menu .item .sub-menu i{
	font-size 18px
	padding-left 3px
	}

.wrapper.collapse .main-container{
	width(100% - 70px)
	margin-left 70px
	}
